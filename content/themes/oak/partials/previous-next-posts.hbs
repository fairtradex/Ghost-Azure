{{! Next post}}
{{#next_post}}
<div class="oak-next-post-wrapper
{{/next_post}}
{{^prev_post}}
	oak-previous-next-post-full-width
{{/prev_post}}
{{#next_post}}">
	<a href="{{url}}" class="oak-next-post">
		<div class="oak-next-post-background" style="background-image: url({{image}});"></div>
		<strong>Next post</strong>
		<h2>{{title}}</h2>
		<hr>
		<time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished"> {{date format=' MMMM'}} {{date format='DD'}}, {{date format=' YYYY'}}</time>
	</a>
</div>
{{/next_post}}

{{! Previous post}}
{{#prev_post}}
<div class="oak-previous-post-wrapper 
{{/prev_post}} 
{{^next_post}} 
	oak-previous-next-post-full-width
{{/next_post}}
{{#prev_post}}">
	<a href="{{url}}" class="oak-previous-post">
		<div class="oak-previous-post-background" style="background-image: url({{image}});"></div>
		<strong>Previous post</strong>
		<h2>{{title}}</h2>
		<hr>
		<time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished"> {{date format=' MMMM'}} {{date format='DD'}}, {{date format=' YYYY'}}</time>
	</a>
</div>
{{/prev_post}}

